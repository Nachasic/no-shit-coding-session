{
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "dist",
      "target": "ES6",
      "importHelpers": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
        "es2018",
        "dom"
      ],
      "baseUrl": "src",
      "typeRoots": [
        "node_modules/@types"
      ],
      "plugins": [
        { "name": "typescript-lit-html-plugin" }
      ]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }